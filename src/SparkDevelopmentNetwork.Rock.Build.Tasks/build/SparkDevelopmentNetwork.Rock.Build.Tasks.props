<Project>
    <PropertyGroup Condition="'$(MSBuildRuntimeType)' != 'Core'">
        <RockBuildTasksAssemblyFile>$(MSBuildThisFileDirectory)..\tasks\net472\SparkDevelopmentNetwork.Rock.Build.Tasks.dll</RockBuildTasksAssemblyFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Core'">
        <RockBuildTasksAssemblyFile Condition="'$(MSBuildRuntimeType)' == 'Core'">$(MSBuildThisFileDirectory)..\tasks\net6.0\SparkDevelopmentNetwork.Rock.Build.Tasks.dll</RockBuildTasksAssemblyFile>
    </PropertyGroup>

    <!-- Tasks -->
    <UsingTask
        TaskName="SparkDevelopmentNetwork.Rock.Build.Tasks.CopyAssemblyToRockWeb"
        AssemblyFile="$(RockBuildTasksAssemblyFile)" />

    <!-- Defined default property values. -->
    <PropertyGroup>
        <CopyToRockWeb>False</CopyToRockWeb>
        <RockWebPath></RockWebPath>
    </PropertyGroup>
</Project>